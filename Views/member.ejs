<!DOCTYPE html>
<html lang="en">

<%-include('common_header', {admin : adminSourse})%>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <title>Admin Dashboard | Member Management</title>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js"></script>
        <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
        <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.0.1/css/buttons.dataTables.min.css">
        <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.dataTables.min.css">
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            }

            :root {
                --primaryColor: #4F46E5;
                --primaryLight: #6366F1;
                --primaryLighter: #818CF8;
                --primaryDark: #4338CA;
                --secondaryColor: #10B981;
                --dangerColor: #EF4444;
                --warningColor: #F59E0B;
                --infoColor: #3B82F6;
                --whiteColor: #FFFFFF;
                --lightGray: #F9FAFB;
                --mediumGray: #E5E7EB;
                --darkGray: #6B7280;
                --textColor: #111827;
                --borderColor: #D1D5DB;
                --smallBorder: 8px;
                --mediumBorder: 12px;
                --bigBorder: 16px;
                --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
                --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
                --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
                --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
                --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
                --fs13: 0.8125rem;
                --fs14: 0.875rem;
                --fs15: 0.9375rem;
                --fs16: 1rem;
                --fs18: 1.125rem;
                --fs20: 1.25rem;
                --fs24: 1.5rem;
                --fs30: 1.875rem;
                --fs36: 2.25rem;
                --sidebarWidth: 280px;
                --headerHeight: 70px;
            }

            html {
                font-size: 16px;
                scroll-behavior: smooth;
            }

            body {
                position: relative;
                color: var(--textColor);
                background-color: var(--lightGray);
                min-height: 100vh;
                overflow-x: hidden;
                line-height: 1.5;
            }

            h1,
            h2,
            h3,
            h4,
            h5,
            h6 {
                line-height: 1.3;
                font-weight: 600;
                color: var(--textColor);
            }

            ul {
                list-style: none;
            }

            a {
                text-decoration: none;
                color: inherit;
            }

            ::-webkit-scrollbar {
                width: 6px;
                height: 6px;
            }

            ::-webkit-scrollbar-track {
                background-color: var(--lightGray);
            }

            ::-webkit-scrollbar-thumb {
                background-color: var(--primaryLight);
                border-radius: 3px;
            }

            .container {
                width: 100%;
                height: 100%;
                position: relative;
                padding: 1.5rem;
            }

            /* Data Table Section */
            .data-table-section {
                width: 100%;
                padding: 1.5rem;
                background-color: var(--whiteColor);
                border-radius: var(--mediumBorder);
                box-shadow: var(--shadow);
                overflow: hidden;
            }

            .data-table-section .section-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 1rem;
            }

            .data-table-section .section-title {
                font-size: var(--fs18);
                font-weight: 600;
                color: var(--textColor);
            }

            .data-table-section .section-actions {
                display: flex;
                gap: 0.75rem;
            }

            /* Filter Controls */
            .filter-controls {
                display: flex;
                flex-wrap: wrap;
                gap: 1rem;
                margin-bottom: 1.5rem;
                padding: 1rem;
                background-color: var(--lightGray);
                border-radius: var(--smallBorder);
            }

            .filter-group {
                display: flex;
                flex-direction: column;
                min-width: 200px;
                flex-grow: 1;
            }

            .filter-label {
                font-size: var(--fs13);
                font-weight: 500;
                color: var(--darkGray);
                margin-bottom: 0.5rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .filter-select {
                padding: 0.625rem 1rem;
                border: 1px solid var(--borderColor);
                border-radius: var(--smallBorder);
                font-size: var(--fs14);
                color: var(--textColor);
                background-color: var(--whiteColor);
                transition: all 0.2s ease;
                appearance: none;
                background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
                background-repeat: no-repeat;
                background-position: right 0.75rem center;
                background-size: 1rem;
            }

            .filter-select:focus {
                outline: none;
                border-color: var(--primaryLight);
                box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
            }

            .filter-actions {
                display: flex;
                align-items: flex-end;
                gap: 0.5rem;
            }

            .filter-btn {
                padding: 0.625rem 1.25rem;
                border-radius: var(--smallBorder);
                font-size: var(--fs14);
                font-weight: 500;
                cursor: pointer;
                transition: all 0.2s ease;
                border: none;
                display: inline-flex;
                align-items: center;
                gap: 0.5rem;
            }

            .filter-btn.apply {
                background-color: var(--primaryColor);
                color: var(--whiteColor);
            }

            .filter-btn.apply:hover {
                background-color: var(--primaryDark);
            }

            .filter-btn.reset {
                background-color: var(--lightGray);
                color: var(--darkGray);
            }

            .filter-btn.reset:hover {
                background-color: var(--mediumGray);
            }

            .table-responsive {
                width: 100%;
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }

            .table {
                width: 100%;
                border-collapse: collapse;
                font-size: var(--fs14);
            }

            .table th {
                background-color: var(--primaryColor);
                color: var(--whiteColor);
                padding: 1rem 1.25rem;
                text-align: left;
                font-weight: 500;
                text-transform: uppercase;
                font-size: var(--fs13);
                letter-spacing: 0.5px;
            }

            .table td {
                padding: 1rem 1.25rem;
                border-bottom: 1px solid var(--borderColor);
                vertical-align: middle;
                color: var(--textColor);
            }

            .table tr:nth-child(even) {
                background-color: var(--lightGray);
            }

            .table tr:hover {
                background-color: rgba(79, 70, 229, 0.03);
            }

            .status-badge {
                display: inline-block;
                padding: 0.25rem 0.75rem;
                border-radius: 50px;
                font-size: var(--fs13);
                font-weight: 500;
            }

            .status-active {
                background-color: rgba(16, 185, 129, 0.1);
                color: var(--secondaryColor);
            }

            .status-pending {
                background-color: rgba(245, 158, 11, 0.1);
                color: var(--warningColor);
            }

            .status-inactive {
                background-color: rgba(156, 163, 175, 0.1);
                color: var(--darkGray);
            }

            /* Action buttons */
            .action-btn {
                width: 30px;
                height: 30px;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                border-radius: var(--smallBorder);
                color: var(--darkGray);
                transition: all 0.2s ease;
                cursor: pointer;
                border: none;
                background: transparent;
            }

            .action-btn:hover {
                background-color: var(--lightGray);
                color: var(--textColor);
            }

            .action-btn.edit {
                color: var(--infoColor);
            }

            .action-btn.delete {
                color: var(--dangerColor);
            }

            /* Scroll to top button */
            .scroll-top {
                position: fixed;
                bottom: 2rem;
                right: 2rem;
                width: 48px;
                height: 48px;
                border-radius: 50%;
                background-color: var(--primaryColor);
                color: var(--whiteColor);
                display: flex;
                align-items: center;
                justify-content: center;
                cursor: pointer;
                z-index: 99;
                opacity: 0;
                visibility: hidden;
                transition: all 0.3s ease;
                box-shadow: var(--shadow-md);
                border: none;
                outline: none;
            }

            .scroll-top.active {
                opacity: 1;
                visibility: visible;
            }

            .scroll-top:hover {
                background-color: var(--primaryDark);
                transform: translateY(-3px);
                box-shadow: var(--shadow-lg);
            }

            .scroll-top i {
                font-size: 1.25rem;
            }

            /* DataTables Customization */
            .dataTables_wrapper {
                width: 100%;
            }

            .dataTables_wrapper .dataTables_filter {
                margin-bottom: 1rem;
            }

            .dataTables_wrapper .dataTables_filter input {
                padding: 0.5rem 0.75rem;
                border: 1px solid var(--borderColor);
                border-radius: var(--smallBorder);
                margin-left: 0.5rem;
                font-size: var(--fs14);
                transition: all 0.2s ease;
            }

            .dataTables_wrapper .dataTables_filter input:focus {
                border-color: var(--primaryLight);
                outline: none;
                box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
            }

            .dataTables_wrapper .dataTables_length select {
                padding: 0.375rem 1.75rem 0.375rem 0.75rem;
                border: 1px solid var(--borderColor);
                border-radius: var(--smallBorder);
                font-size: var(--fs14);
            }

            .dataTables_wrapper .dataTables_paginate {
                margin-top: 1.5rem;
                padding-top: 1rem;
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 0.25rem;
                flex-wrap: nowrap;
                border-top: 1px solid var(--borderColor);
                overflow-x: auto;
                white-space: nowrap;
            }

            .dataTables_wrapper .dataTables_paginate .paginate_button {
                min-width: 32px;
                height: 32px;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                padding: 0 0.5rem;
                border-radius: var(--smallBorder);
                border: 1px solid var(--borderColor);
                color: var(--textColor);
                font-size: var(--fs14);
                font-weight: 500;
                transition: all 0.2s ease;
                flex-shrink: 0;
            }

            .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
                background-color: var(--lightGray);
                border-color: var(--mediumGray);
                color: var(--primaryColor);
            }

            .dataTables_wrapper .dataTables_paginate .paginate_button.current {
                background-color: var(--primaryColor);
                border-color: var(--primaryColor);
                color: var(--whiteColor);
                font-weight: 600;
            }

            .dataTables_wrapper .dataTables_paginate .paginate_button.disabled {
                opacity: 0.5;
                pointer-events: none;
            }

            .dataTables_wrapper .dataTables_info {
                font-size: var(--fs14);
                color: var(--darkGray);
                padding-top: 1rem;
            }

            /* Notification Badge */
            .notification-badge {
                position: absolute;
                top: -5px;
                right: -5px;
                width: 18px;
                height: 18px;
                background-color: var(--dangerColor);
                color: white;
                border-radius: 50%;
                font-size: 10px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: bold;
            }

            /* Tooltip */
            .tooltip-inner {
                font-size: var(--fs13);
                padding: 0.375rem 0.75rem;
                background-color: var(--textColor);
            }

            .bs-tooltip-auto[data-popper-placement^=top] .tooltip-arrow::before,
            .bs-tooltip-top .tooltip-arrow::before {
                border-top-color: var(--textColor);
            }

            /* Enhanced Add New Button */
            .add-new-btn {
                display: inline-flex;
                align-items: center;
                gap: 0.5rem;
                padding: 0.625rem 1.25rem;
                background-color: var(--secondaryColor);
                color: white;
                border: none;
                border-radius: var(--smallBorder);
                font-size: var(--fs14);
                font-weight: 500;
                cursor: pointer;
                transition: all 0.2s ease;
                box-shadow: var(--shadow-sm);
            }

            .add-new-btn:hover {
                background-color: #0e9f72;
                transform: translateY(-1px);
                box-shadow: var(--shadow);
            }

            /* Enhanced Export Buttons */
            .export-btn {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                width: 36px;
                height: 36px;
                border-radius: var(--smallBorder);
                background-color: white;
                color: var(--darkGray);
                border: 1px solid var(--borderColor);
                transition: all 0.2s ease;
                cursor: pointer;
            }

            .export-btn:hover {
                background-color: var(--lightGray);
                transform: translateY(-1px);
                box-shadow: var(--shadow-sm);
            }

            .export-btn.excel:hover {
                color: #1d6f42;
                border-color: #1d6f42;
            }

            .export-btn.pdf:hover {
                color: #e74c3c;
                border-color: #e74c3c;
            }

            @media (min-width: 992px) {
                .container {
                    padding: 2rem;
                }

                .main {
                    grid-template-columns: repeat(12, 1fr);
                    grid-auto-rows: minmax(150px, auto);
                    gap: 1.5rem;
                }

                .data-table-section {
                    grid-column: span 12;
                }
            }

            @media (min-width: 1200px) {
                .container {
                    max-width: 1400px;
                    margin: 0 auto;
                }
            }

            /* Small screens (below 576px) */
            @media (max-width: 575.98px) {
                html {
                    font-size: 14px;
                }

                .container {
                    padding: 1rem;
                }

                .main {
                    display: flex;
                    flex-direction: column;
                    gap: 1rem;
                }

                .box,
                .data-table-section,
                .member-form-section {
                    width: 100%;
                    margin-left: 0;
                    margin-right: 0;
                    padding: 1rem;
                }

                .table th,
                .table td {
                    padding: 0.75rem;
                    font-size: var(--fs13);
                }

                .dataTables_wrapper .dataTables_length,
                .dataTables_wrapper .dataTables_filter {
                    width: 100%;
                    margin-bottom: 0.5rem;
                }

                .dataTables_wrapper .dataTables_filter input {
                    width: 100%;
                    margin-left: 0;
                    margin-top: 0.5rem;
                }

                /* Mobile pagination adjustments */
                .dataTables_wrapper .dataTables_paginate {
                    gap: 0.125rem;
                }

                .dataTables_wrapper .dataTables_paginate .paginate_button {
                    min-width: 28px;
                    height: 28px;
                    font-size: var(--fs13);
                    padding: 0 0.25rem;
                }

                /* Filter controls on mobile */
                .filter-controls {
                    flex-direction: column;
                    gap: 0.75rem;
                }

                .filter-group {
                    min-width: 100%;
                }
            }

            /* Animation Classes */
            .fade-in {
                animation: fadeIn 0.5s ease-in-out;
            }

            @keyframes fadeIn {
                from {
                    opacity: 0;
                    transform: translateY(10px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            /* Form Popup Styles */
            .overlay {
                display: none;
                position: fixed;
                inset: 0;
                background: rgba(0, 0, 0, 0.5);
                z-index: 998;
                backdrop-filter: blur(3px);
            }

            .form-popup {
                display: none;
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%) scale(0.9);
                background: #ffffff;
                padding: 30px;
                width: 100%;
                max-width: 700px;
                border-radius: 12px;
                box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
                z-index: 999;
                transition: transform 0.3s ease, opacity 0.3s ease;
                opacity: 0;
                max-height: 90vh;
                overflow-y: auto;
            }

            .form-popup.active {
                display: block;
                transform: translate(-50%, -50%) scale(1);
                opacity: 1;
            }

            .form-popup h2 {
                text-align: center;
                color: #2C3E50;
                margin-bottom: 25px;
                font-weight: 600;
                font-size: 1.5rem;
                position: sticky;
                top: 0;
                background: white;
                padding-bottom: 15px;
                z-index: 1;
            }

            .form-row {
                display: flex;
                flex-wrap: wrap;
                gap: 20px;
                margin-bottom: 15px;
            }

            .form-group {
                flex: 1;
                min-width: 250px;
                margin-bottom: 15px;
            }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-size: 14px;
                color: #4a5568;
                font-weight: 500;
            }

            .form-group input,
            .form-group select,
            .form-group textarea {
                width: 100%;
                padding: 10px 12px;
                font-size: 14px;
                border: 1px solid #e2e8f0;
                border-radius: 8px;
                box-sizing: border-box;
                transition: all 0.2s ease;
                background-color: #f8fafc;
            }

            .form-group input:focus,
            .form-group select:focus,
            .form-group textarea:focus {
                outline: none;
                border-color: var(--primaryLight);
                box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
                background-color: white;
            }

            .form-group input[type="file"] {
                padding: 8px;
            }

            .image-preview-container {
                display: flex;
                flex-direction: column;
                align-items: center;
                margin-top: 15px;
                width: 100%;
            }

            .image-preview {
                width: 120px;
                height: 120px;
                border-radius: 50%;
                object-fit: cover;
                border: 3px solid #e2e8f0;
                display: none;
            }

            .form-actions {
                display: flex;
                gap: 15px;
                margin-top: 20px;
                position: sticky;
                bottom: 0;
                background: white;
                padding-top: 20px;
                padding-bottom: 10px;
                z-index: 1;
            }

            .form-actions button {
                flex: 1;
                padding: 12px;
                font-size: 16px;
                font-weight: 500;
                border: none;
                border-radius: 8px;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .submit-btn {
                background: var(--secondaryColor);
                color: #fff;
            }

            .submit-btn:hover {
                background: #0e9f72;
                transform: translateY(-2px);
                box-shadow: 0 4px 6px rgba(16, 185, 129, 0.2);
            }

            .close-btn {
                background: #f8fafc;
                color: #4a5568;
                border: 1px solid #e2e8f0;
            }

            .close-btn:hover {
                background: #edf2f7;
                transform: translateY(-2px);
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            }

            @media (max-width: 768px) {
                .form-popup {
                    width: 95%;
                    padding: 20px;
                    max-height: 85vh;
                }

                .form-row {
                    flex-direction: column;
                    gap: 10px;
                }

                .form-group {
                    min-width: 100%;
                }

                .form-actions {
                    flex-direction: column;
                    gap: 10px;
                }

                .form-popup h2 {
                    font-size: 1.3rem;
                    padding-bottom: 10px;
                }
            }

            /* Custom scrollbar for form popup */
            .form-popup::-webkit-scrollbar {
                width: 6px;
            }

            .form-popup::-webkit-scrollbar-thumb {
                background-color: rgba(0, 0, 0, 0.2);
                border-radius: 3px;
            }

            .form-popup::-webkit-scrollbar-track {
                background-color: rgba(0, 0, 0, 0.05);
            }
        </style>
    </head>

    <body>
        <div class="container" id="top">
            <main class="content">
                <section class="main">
                    <script>
                        <% if (messages.success) { %>
                            Swal.fire({
                                icon: 'success',
                                title: 'Success!',
                                text: "<%= messages.success %>",
                                confirmButtonColor: '#3085d6'
                            });
                        <% } %>
                    
                        <% if (messages.error) { %>
                            Swal.fire({
                                icon: 'error',
                                title: 'Error!',
                                text: "<%= messages.error %>",
                                confirmButtonColor: '#d33'
                            });
                        <% } %>
                    </script>

                    <!-- Data Table Section -->
                    <div class="data-table-section fade-in" style="animation-delay: 0.2s;">
                        <div class="section-header">
                            <h3 class="section-title">Member List</h3>
                            <div class="section-actions">
                                <a href="/DPS/new-member" class="add-new-btn">
                                    <i class="fas fa-plus-circle"></i> Add New
                                </a>
                                <button class="export-btn excel" title="Export to Excel">
                                    <i class="fas fa-file-excel"></i>
                                </button>
                                <button class="export-btn pdf" title="Export to PDF">
                                    <i class="fas fa-file-pdf"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Filter Controls -->
                        <div class="filter-controls">
                            <div class="filter-group">
                                <label class="filter-label">Passing Year</label>
                                <select class="filter-select" id="academicYears">
                                    <option value="">All Years</option>

                                    <% allAcademicYear.forEach((year)=>{ %>

                                        <option value='<%=year.Year%>'>
                                            <%=year.Year%>
                                        </option>

                                        <%}) %>

                                </select>
                            </div>


                            <div class="filter-group">
                                <label class="filter-label">Members</label>
                                <select class="filter-select" id="allMembers">
                                    <option value="">All Members</option>


                                </select>
                            </div>

                            <div class="filter-actions">
                                <button class="filter-btn apply" id="filterApply">
