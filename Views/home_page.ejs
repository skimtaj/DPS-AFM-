    <script>
            document.querySelectorAll('.nav-link, .dropdown-item').forEach(item => {
                item.addEventListener('touchstart', () => {
                    item.classList.add('active');
                });
                item.addEventListener('touchend', () => {
                    setTimeout(() => {
                        item.classList.remove('active');
                    }, 200);
                });
            });
    </script>

</body>

</html>