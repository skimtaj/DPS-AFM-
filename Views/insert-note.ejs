<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insert New Note</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #29333E;
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .register-container {
            background: #fff;
            width: 100%;
            max-width: 600px;
            padding: 40px 30px;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .note-icon {
            font-size: 60px;
            color: #FFD702;
            margin-bottom: 10px;
        }

        .register-container h1 {
            font-size: 36px;
            font-weight: bold;
            color: #00B74A;
            margin-bottom: 10px;
        }

        .register-container p {
            font-size: 16px;
            color: #666;
            margin-bottom: 30px;
        }

        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 12px 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 16px;
            background-color: #f9f9f9;
            outline: none;
            transition: 0.3s ease;
        }

        .form-group textarea {
            resize: none;
            height: 120px;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            border-color: #00B74A;
            background-color: #fff;
        }

        .form-group label {
            position: absolute;
            top: 10px;
            left: 20px;
            font-size: 14px;
            color: #888;
            pointer-events: none;
            transition: 0.3s ease;
        }

        .form-group input:focus+label,
        .form-group input:not(:placeholder-shown)+label,
        .form-group textarea:focus+label,
        .form-group textarea:not(:placeholder-shown)+label {
            top: -10px;
            left: 20px;
            font-size: 12px;
            background: #fff;
            padding: 0 5px;
            color: #00B74A;
        }

        .btn-submit {
            width: 100%;
            padding: 12px;
            font-size: 18px;
            border: none;
            border-radius: 8px;
            background: #00B74A;
            color: #fff;
            transition: 0.3s ease;
        }

        .btn-submit:hover {
            background: #FFD702;
            color: #29333E;
        }

        .footer-text {
            margin-top: 20px;
            color: #555;
            font-size: 14px;
        }

        .footer-text a {
            color: #00B74A;
            text-decoration: none;
        }

        @media (max-width: 576px) {
            .form-row {
                display: flex;
                flex-wrap: wrap;
                gap: 15px;
            }

            .form-col {
                flex: 0 0 calc(50% - 10px);
            }

            .btn-submit {
                font-size: 16px;
            }

            h1 {
                font-size: 28px;
            }

            .register-container {

                padding: 40px 13px;
            }
        }
    </style>
</head>

<body>

    <div class="register-container">
        <!-- Note Icon -->
        <i class="fas fa-sticky-note note-icon"></i>

        <h1><span style="color: #00B74A;">Note</span><span style="color: #FFD700;">Master</span></h1>
        <p>Your one-stop solution for managing and organizing notes efficiently!</p>

        <form method="post" enctype="multipart/form-data">

            <div class="form-group">
                <input type="date" id="noteDate" name="Date" required disabled>
                <label for="noteDate">Note Date</label>
            </div>

            <div class="form-group">
                <input type="time" id="time" name="Time" required disabled>
                <label for="noteTime">Note Time</label>
            </div>


            <div class="form-group">
                <input type="text" id="noteTitle" name="Note_Title" placeholder=" ">
                <label for="noteTitle">Note Title</label>
            </div>

            <div class="form-group">
                <textarea id="noteDescription" name="Note_Description" placeholder=" "></textarea>
                <label for="noteDescription">Note Description</label>
            </div>



            <div class="form-group">
                <input type="file" id="Note_PDF" name="Note_PDF" accept="application/pdf">
                <label for="Note_PDF">Upload File (If Needed)</label>
            </div>


            <div class="form-group">
                <input type="date" id="Reminder_Date" name="Reminder_Date">
                <label for="Reminder_Date">Reminder Date (if Needed)</label>
            </div>


            <button type="submit" class="btn-submit" onclick="send()">Save Note</button>

            <div class="footer-text">
                <p>Want to view all notes? <a href="/user-dashboard">Click here</a></p>
                <p><a href="javascript:history.back()">Go Back</a></p>
            </div>
        </form>
    </div>

</body>

<script>

    const date = document.getElementById('noteDate');
    const timeField = document.getElementById('time');

    window.onload = () => {

        const today = new Date().toISOString().split('T')[0]
        const time = new Date().toTimeString().split(' ')[0].substring(0, 5)

        date.value = today
        timeField.value = time
    }

    const send = () => {
        date.disabled = false;
        timeField.disabled = false;

    }


</script>

</html>