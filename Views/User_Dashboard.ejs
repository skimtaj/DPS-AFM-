<!DOCTYPE html>
<html lang="en">
<%-include('Hedaer') %>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Responsive Dashboard</title>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet">
        <link href="https://cdn.datatables.net/responsive/2.2.6/css/responsive.dataTables.min.css" rel="stylesheet">

        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f4f4f4;
            }

            /* Hero Section */
            .hero {
                width: 100%;
                height: 60vh;
                background: #2749AD;
                position: relative;
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
                color: white;
                text-align: center;
                padding: 30px 10px;
            }

            .hero-content {
                z-index: 1;
            }

            .profile-img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
                object-fit: cover;
                margin-bottom: 20px;
                border: 5px solid #fff;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            }

            .wish-message {
                font-size: 2rem;
                margin-bottom: 10px;
                text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
                background-color: #FFD700;
                padding: 5px 10px;
                border-radius: 5px;
                animation: blinkBg 1s infinite;
            }

            @keyframes blinkBg {
                0% {
                    background-color: #FFD700;
                }

                50% {
                    background-color: #FF6347;
                }

                100% {
                    background-color: #FFD700;
                }
            }

            .welcome-message {
                font-size: 3rem;
                text-transform: uppercase;
                margin-bottom: 10px;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            }

            .subtext {
                font-size: 1.5rem;
                margin-top: 10px;
                text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
            }

            /* DataTable Section */
            .data-table-section {
                padding: 30px;
                background-color: #fff;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                margin: 20px;
            }

            .table {
                border-collapse: collapse;
            }

            .table th,
            .table td {
                padding: 15px;
                text-align: left;
                border-bottom: 1px solid #dee2e6;
                white-space: nowrap;
            }

            .table th {
                background-color: #2749AD;
                color: white;
            }

            /* Responsive adjustments */
            @media (max-width: 768px) {
                .wish-message {
                    font-size: 1.5rem;
                }

                .welcome-message {
                    font-size: 2rem;
                }

                .subtext {
                    font-size: 1.2rem;
                }
            }

            @media (max-width: 576px) {
                .profile-img {
                    width: 120px;
                    height: 120px;
                }

                .wish-message {
                    font-size: 1.2rem;
                }

                .welcome-message {
                    font-size: 1.5rem;
                }

                .subtext {
                    font-size: 1rem;
                }

                .hero {
                    height: 30vh;
                    padding: 30px;
                }

                .data-table-section {
                    padding: 10px;
                }

                /* Adjust font size for DataTable */
                .data-table-section .table th,
                .data-table-section .table td {
                    font-size: 15px;
                    /* Decrease font size for mobile devices */
                }

                .data-table-section .table {
                    font-size: 15px;
                    /* Decrease overall table font size */
                }
            }
        </style>
    </head>

    <body>

        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-content">
                <!-- Profile Image -->

                <h1 class="welcome-message">
                    <%=userData.Name%>
                </h1>
                <p class="wish-message" id="greetingMessage">Hey ...</p>
                <p class="subtext">Ready for Today? Review Your Schedule Now ðŸ‘‡ </p>
            </div>
        </section>

        <!-- Data Table Section -->
        <div class="data-table-section">
            <div class="table-responsive">
                <table id="myTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Sl No</th>
                            <th>Date</th>
                            <th>Place</th>
                            <th> Program Type</th>

                            <th>Name</th>
                            <th> Mobile</th><!-- Hide on extra small screens -->
                        </tr>
                    </thead>
                    <tbody>
                        <% todayPrograme.forEach((program, Index)=> { %>
                            <tr>

                                <td>
                                    <%= Index + 1 %>
                                </td>

                                <td>
                                    <%=program.Date%>
                                </td>

                                <td>
                                    <%=program.Place%>
                                </td>

                                <td>
                                    <%=program.Program_Type%>
                                </td>

                                <td>
                                    <%=program.Name%>
                                </td>

                                <td>
                                    <%=program.Mobile%>
                                </td>

                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/responsive/2.2.6/js/dataTables.responsive.min.js"></script>
        <script>
            // Get the current hour
            var currentHour = new Date().getHours();
            var greetingMessage = document.getElementById('greetingMessage');

            // Set the greeting based on the time of day
            if (currentHour >= 5 && currentHour < 12) {
                greetingMessage.innerHTML = "Good Morning!";
            } else if (currentHour >= 12 && currentHour < 18) {
                greetingMessage.innerHTML = "Good Afternoon!";
            } else if (currentHour >= 18 && currentHour < 21) {
                greetingMessage.innerHTML = "Good Evening!";
            } else {
                greetingMessage.innerHTML = "Good Night!";
            }

            // Initialize the DataTable with responsive options
            $(document).ready(function () {
                $('#myTable').DataTable({
                    responsive: true, // Make sure the table is responsive
                    paging: false, // Disable pagination
                    searching: false, // Disable searching
                    info: false, // Disable showing "entries" text
                    autoWidth: false // Disable auto width calculation
                });
            });
        </script>

    </body>

</html>