<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Class</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #E3F2FD;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .class-form {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 600px;
        }

        .class-logo {
            width: 60px;
            height: 60px;
            margin-bottom: 10px;
        }

        .btn-custom {
            background-color: #00A65A;
            border: none;
            color: white;
        }

        .btn-custom:hover {
            background-color: #008C4A;
        }

        .form-label {
            font-weight: bold;
        }

        .form-intro {
            text-align: center;
            margin-bottom: 15px;
            font-size: 16px;
            color: #555;
        }

        .underline {
            width: 100%;
            height: 2px;
            background-color: #00A65A;
            margin-bottom: 20px;
        }

        .back-btn {
            background-color: #6C757D;
            color: white;
            border: none;
        }

        .back-btn:hover {
            background-color: #5A6268;
        }

        .fees-section {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            margin-bottom: 20px;
        }

        .fees-title {
            font-size: 18px;
            font-weight: bold;
            color: #005A4A;
            text-transform: uppercase;
            text-align: left;
            padding-bottom: 5px;
            border-bottom: 2px solid #00A65A;
            margin-bottom: 15px;
        }
    </style>
</head>

<body>
    <div class="class-form">
        <div class="text-center">
            <img src="https://cdn-icons-png.flaticon.com/512/609/609803.png" alt="Class Logo" class="class-logo">
            <h3 class="mb-2">Add New Class</h3>
            <p class="form-intro">
                Fill in the details below to add a new class.
            </p>
            <div class="underline"></div>
        </div>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Class Name</label>
                <input type="text" class="form-control" required placeholder="Enter class name" name="className">
            </div>

            <div class="mb-3">
                <label class="form-label">Class Teacher Name</label>
                <select class="form-control" required name="classTeacher">
                    <option value="">Select</option>

                    <% teacherSourse.forEach((teacher)=>{%>

                        <option value="<%=teacher.Name%>">
                            <%=teacher.Name%>
                        </option>

                        <% })%>

                </select>
            </div>




            <div class="fees-section">
                <div class="fees-title">One Time Fees Structure</div>

                <div class="row mb-2">
                    <div class="col-6">
                        <label class="col-form-label">Registration Fees </label>
                    </div>
                    <div class="col-6">
                        <input type="number" class="form-control" required placeholder="Amount" name="registrationFee"
                            oninput="monthlycalculate()" id="registrationFee">
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-6">
                        <label class="col-form-label">Library Fee </label>
                    </div>
                    <div class="col-6">
                        <input type="number" class="form-control" required placeholder="Amount" name="libraryFees"
                            oninput="monthlycalculate()" id="libraryFees">
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-6">
                        <label class="col-form-label">Event Fee </label>
                    </div>
                    <div class="col-6">
                        <input type="number" class="form-control" required placeholder="Amount" name="eventFee"
                            oninput="monthlycalculate()" id="eventFee">
                    </div>
                </div>



                <div class="row mb-2">
                    <div class="col-6">
                        <label class="col-form-label">Total </label>
                    </div>
                    <div class="col-6">
                        <input type="number" class="form-control" required placeholder="Amount" name="totalOneTimeFees"
                            id="totalOneTimeFees">
                    </div>

                </div>


            </div>





            <div class="fees-section">
                <div class="fees-title">Monthly Fees Structure</div>

                <div class="row mb-2">
                    <div class="col-6">
                        <label class="col-form-label">Tuition Fees </label>
                    </div>
                    <div class="col-6">
                        <input type="number" class="form-control" required placeholder="Amount" name="tuitionFee"
                            oninput="totalClaculate()" id="tuitionFee">
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-6">
                        <label class="col-form-label">Transport Fee </label>
                    </div>
                    <div class="col-6">
                        <input type="number" class="form-control" required placeholder="Amount" name="transportFee"
                            oninput="totalClaculate()" id="transportFee">
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-6">
                        <label class="col-form-label">Meal Fee </label>
                    </div>
                    <div class="col-6">
                        <input type="number" class="form-control" required placeholder="Amount" name="mealFee"
                            oninput="totalClaculate()" id="mealFee">
                    </div>
                </div>



                <div class="row mb-2">
                    <div class="col-6">
                        <label class="col-form-label">Total </label>
                    </div>
                    <div class="col-6">
                        <input type="number" class="form-control" required placeholder="Amount" name="totalMonthlyFees"
                            id="totalMonthlyFees">
                    </div>

                </div>


            </div>



            <button type="submit" class="btn btn-custom w-100">Add Class</button>
            <a href="/TBSA/admin-dashboard" class="btn back-btn w-100 mt-2">‚Üê Back</a>
        </form>
    </div>

    <script>


        const registrationFee = document.getElementById('registrationFee');
        const libraryFees = document.getElementById('libraryFees');
        const eventFee = document.getElementById('eventFee');
        const totalOneTimeFees = document.getElementById('totalOneTimeFees')


        const tuitionFee = document.getElementById('tuitionFee');
        const transportFee = document.getElementById('transportFee');
        const mealFee = document.getElementById('mealFee');
        const totalMonthlyFees = document.getElementById('totalMonthlyFees')

        const totalClaculate = () => {

            const totalAmount = parseFloat(tuitionFee.value) + parseFloat(transportFee.value) + parseFloat(mealFee.value)
            totalMonthlyFees.value = totalAmount.toFixed(2);
        }

        const monthlycalculate = () => {

            const totaFees = parseFloat(registrationFee.value) + parseFloat(libraryFees.value) + parseFloat(eventFee.value)
            totalOneTimeFees.value = totaFees.toFixed(2)
        }


    </script>
</body>

</html>