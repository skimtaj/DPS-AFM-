<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Registration Fees</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #E3F2FD;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .form-container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 800px;
        }

        .btn-custom {
            background-color: #00A65A;
            border: none;
            color: white;
        }

        .btn-custom:hover {
            background-color: #008C4A;
        }

        .form-label {
            font-weight: bold;
        }

        .underline {
            width: 100%;
            height: 3px;
            background-color: #00A65A;
            margin-bottom: 20px;
        }

        .fees-section {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.2);
            margin-bottom: 15px;
        }

        .fees-title {
            font-size: 18px;
            font-weight: bold;
            color: #005A4A;
            text-transform: uppercase;
            text-align: left;
            padding-bottom: 5px;
            border-bottom: 1px solid #00A65A;
            margin-bottom: 10px;
        }

        .fees-input {
            padding: 5px;
        }

        .logo {
            max-width: 80px;
        }
    </style>
</head>

<body>
    <div class="form-container">
        <div class="text-center">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSKABBujJluTewb6f5-y8OtAEDEedk01YZRWsfKVsuAaSLE3CGMkyLgSKp1UmzuG_p85Iw&usqp=CAU"
                alt="School Logo" class="logo mb-2">
            <h3 class="mb-1">Student Update </h3>
            <p class="text-muted">Complete the form below to proceed with admission</p>
            <div class="underline"></div>
        </div>

        <form method="post" enctype="multipart/form-data">

            <div class="fees-section">
                <div class="fees-title">Student Information</div>
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Student Name</label>
                        <input type="text" class="form-control" placeholder="Enter full name" name="Name"
                            value="<%=student_sourse.Name%>">
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Gender</label>
                        <select class="form-control" name="Gender">
                            <option value="">Select Gender</option>
                            <option value="Male" <%=student_sourse.Gender==='Male' ? 'selected' : '' %>>Male</option>
                            <option value="Female" <%=student_sourse.Gender==='Female' ? 'selected' : '' %> >Female
                            </option>
                            <option value="Other" <%=student_sourse.Gender==='Other' ? 'selected' : '' %>>Other</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Date of Birth</label>
                        <input type="date" class="form-control" name="DOB" value="<%=student_sourse.DOB%>">
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Category</label>
                        <select class="form-control" name="Category">
                            <option value="">Select Category</option>
                            <option value="General" <%=student_sourse.Category==='General' ? 'selected' : '' %> >
                                General</option>
                            <option value="OBC" <%=student_sourse.Category==='OBC' ? 'selected' : '' %> >OBC</option>
                            <option value="SC" <%=student_sourse.Category==='SC' ? 'selected' : '' %>>SC</option>
                            <option value="ST" <%=student_sourse.Category==='ST' ? 'selected' : '' %>>ST</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Religion </label>
                        <select class="form-control" name="Religion">
                            <option value="">Select Religion</option>
                            <option value="Hindu" <%=student_sourse.Religion==='Hindu' ? 'selected' : '' %>>Hindu
                            </option>
                            <option value="Muslim" <%=student_sourse.Religion==='Muslim' ? 'selected' : '' %> >Muslim
                            </option>
                            <option value="Other" <%=student_sourse.Religion==='Other' ? 'selected' : '' %> >Other
                            </option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Blood Group</label>
                        <select class="form-control" name="Blood">
                            <option value="">Select Blood Group</option>
                            <option value="A+" <%=student_sourse.Blood==='A+' ? 'selected' : '' %>>A+</option>
                            <option value="B+" <%=student_sourse.Blood==='B+' ? 'selected' : '' %>>B+</option>
                            <option value="O+" <%=student_sourse.Blood==='O+' ? 'selected' : '' %>>O+</option>

                        </select>
                    </div>
                    <div class="col-md-12 mb-2">
                        <label class="form-label">Address</label>
                        <textarea class="form-control" placeholder="Enter full address" name="Address"
                            rows="3"> <%=student_sourse.Address %></textarea>
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Mobile</label>
                        <input type="number" class="form-control" placeholder="Enter mobile number" name="Mobile"
                            value="<%=student_sourse.Mobile%>">
                    </div>

                    <div class="col-md-6 mb-2">
                        <label class="form-label">Student Photo</label>
                        <input type="file" class="form-control" name="Profile_Image">
                    </div>
                </div>
            </div>

            <!-- Guardian Information -->
            <div class="fees-section">
                <div class="fees-title">Guardian Information</div>
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Guardian Name</label>
                        <input type="text" class="form-control" placeholder="Enter guardian name" name="GuardianName"
                            value="<%=student_sourse.GuardianName%>">
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Guardian Mobile</label>
                        <input type="number" class="form-control" placeholder="Enter guardian mobile"
                            name="GuardianMobile" value="<%=student_sourse.GuardianMobile%>">
                    </div>
                    <div class="col-md-12 mb-2">
                        <label class="form-label">Guardian Email</label>
                        <input type="email" class="form-control" placeholder="Enter guardian email" name="GuardianEmail"
                            value="<%=student_sourse.GuardianEmail%>">
                    </div>
                </div>
            </div>

            <!-- Previous Academic Records -->
            <div class="fees-section">
                <div class="fees-title">Previous Academic Records</div>
                <div class="row">
                    <div class="col-md-12 mb-2">
                        <label class="form-label">Upload Previous Year Result/Marksheet</label>
                        <input type="file" class="form-control" name="PreviousResult">
                    </div>
                </div>
            </div>

            <!-- Admission Details -->
            <div class="fees-section">
                <div class="fees-title">Admission Details</div>
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Admission Date</label>
                        <input type="date" class="form-control" name="admissionDate"
                            value="<%=student_sourse.admissionDate%>">
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Admission For</label>
                        <select class="form-control" name="admissionFor" id="admissionFor" required>
                            <option value="">Select Class</option>
                            <% allClass.forEach((cls)=>{%>
                                <option value="<%=cls.className%>">
                                    <%=cls.className %>
                                </option>
                                <%}) %>
                        </select>
                    </div>


                    <div class="col-md-12 mb-2">
                        <label class="form-label">Academic Year</label>
                        <select class="form-control" required name="academicYear">

                            <option value="">Select Academic Year</option>

                            <% allAcademicYear.forEach((year)=>{%>

                                <option value="<%=year.academicYear%>" <%=student_sourse.academicYear===year.academicYear ? 'selected' : ''%> >
                                    <%=year.academicYear%>
                                </option>

                                <%}) %>

                        </select>
                    </div>

                </div>
            </div>

            <!-- One-Time Registration Fees -->
            <div class="fees-section">
                <div class="fees-title">One-Time Registration Fees</div>
                <div class="row mb-2">
                    <div class="col-6"><label class="form-label">Admission Fee</label></div>
                    <div class="col-6"><input type="number" class="form-control fees-input" id="admissionFee"
                            name="admissionFee"></div>
                </div>
                <div class="row mb-2">
                    <div class="col-6"><label class="form-label">Library Fee</label></div>
                    <div class="col-6"><input type="number" class="form-control fees-input" id="libraryFee"
                            name="libraryFee"></div>
                </div>
                <div class="row mb-2">
                    <div class="col-6"><label class="form-label">Event Fee</label></div>
                    <div class="col-6"><input type="number" class="form-control fees-input" id="eventFee"
                            name="eventFee"></div>
                </div>
                <input type="text" id="totalOneTimeFees" class="form-control fees-input" readonly
                    placeholder="Total One-Time Fees" name="totalOnetimeFees">
            </div>

            <!-- Monthly Fees -->
            <div class="fees-section">
                <div class="fees-title">Monthly Fees Structure</div>
                <div class="row mb-2">
                    <div class="col-6"><label class="form-label">Tuition Fee</label></div>
                    <div class="col-6"><input type="number" class="form-control fees-input" id="tuitionFee"
                            name="tuitionFee"></div>
                </div>
                <div class="row mb-2">
                    <div class="col-6"><label class="form-label">Transport Fee</label></div>
                    <div class="col-6"><input type="number" class="form-control fees-input" id="transportFee"
                            name="transportFee"></div>
                </div>
                <div class="row mb-2">
                    <div class="col-6"><label class="form-label">Meal Fee</label></div>
                    <div class="col-6"><input type="number" class="form-control fees-input" id="mealFee" name="mealFee">
                    </div>
                </div>
                <input type="text" id="totalMonthlyFees" class="form-control fees-input" readonly
                    placeholder="Total Monthly Fees" name="totalMonthlyFees">


                <div class="fees-title">Payment Information</div>

                <div class="mb-3">
                    <label class="form-label">Total Amount to Pay (₹)</label>
                    <input type="text" id="totalAmount" class="form-control" readonly name="totalAmount">
                </div>


                <div class="col-md-12 mb-2">
                    <label class="form-label">Payment Method</label>
                    <select class="form-control" required id="selectedMethod" name="paymentMethod">
                        <option value="">Select Method</option>
                        <option value="Qr Code" <%=student_sourse.paymentMethod==='Qr Code' ? 'selected' : '' %>>Qr Code
                        </option>
                        <option value="Bank Transfer" <%=student_sourse.paymentMethod==='Bank Transfer' ? 'selected'
                            : '' %>>Bank Transfer</option>
                        <option value="Cash" <%=student_sourse.paymentMethod==='Cash' ? 'selected' : '' %>>Cash</option>
                    </select>
                </div>

                <!-- Bank Transfer Details -->
                <div id="bankTransferDetails" class="payment-method" style="display: none">
                    <div class="row">
                        <div class="col-md-12 mb-2">

                            <h6> Name : The Brighat Star Academy</h6>
                            <h6> A/c : 88987676456</h6>
                            <h6> IFSC : SBIN00998787</h6>

                            <p class="text-muted">After payment, please upload the screenshot of payment confirmation
                            </p>
                            <input type="file" class="form-control" name="bankTransferProof">
                        </div>

                    </div>
                </div>

                <div id="qrCodeDetails" class="payment-method" style="display: none;">
                    <div class="qr-code-container">
                        <p>Scan the QR code below to make payment</p>
                        <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=https://example.com/pay?amount=5000"
                            alt="Payment QR Code" class="qr-code mb-2">
                        <p class="text-muted">After payment, please upload the screenshot of payment confirmation</p>
                        <input type="file" class="form-control" name="qrPaymentProof">
                    </div>
                </div>

                <div id="cashPaymentDetails" class="payment-method" style="display: none;">
                    <div class="alert alert-info">
                        <p>Please visit the school office to complete your payment in cash. Bring this form with you.
                        </p>
                        <p>Office hours: 9:00 AM to 3:00 PM (Monday to Friday)</p>
                    </div>
                </div>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="termsCheck" required>
                <label class="form-check-label" for="termsCheck">
                    I agree to the terms and conditions of the school
                </label>
            </div>

            <button type="submit" class="btn btn-custom w-100">Update</button>


    </div>


    </form>
    </div>

    <script>
        const allClass = <%- JSON.stringify(allClass) %>;

        const admissionFor = document.getElementById('admissionFor');
        const admissionFee = document.getElementById('admissionFee')
        const libraryFee = document.getElementById('libraryFee');
        const eventFee = document.getElementById('eventFee');
        const totalOneTimeFees = document.getElementById('totalOneTimeFees');
        const tuitionFee = document.getElementById('tuitionFee');
        const transportFee = document.getElementById('transportFee');
        const mealFee = document.getElementById('mealFee');
        const totalMonthlyFees = document.getElementById('totalMonthlyFees');
        const totalAmount = document.getElementById('totalAmount');
        const selectedMethod = document.getElementById('selectedMethod');
        const qrCodeDetails = document.getElementById('qrCodeDetails');
        const cashPaymentDetails = document.getElementById('cashPaymentDetails');
        const bankTransferDetails = document.getElementById('bankTransferDetails');


        admissionFor.addEventListener('change', (e) => {
            let selectedClass = e.target.value;

            if (selectedClass) {
                allClass.forEach((cls) => {
                    if (cls.className === selectedClass) {
                        admissionFee.value = cls.registrationFee;
                        libraryFee.value = cls.libraryFees;
                        eventFee.value = cls.eventFee;
                        totalOneTimeFees.value = cls.totalOneTimeFees

                        tuitionFee.value = cls.tuitionFee;
                        transportFee.value = cls.transportFee;
                        mealFee.value = cls.mealFee;
                        totalMonthlyFees.value = cls.totalMonthlyFees;
                        totalAmount.value = totalOneTimeFees.value;
                    }
                })
            }
        });


        selectedMethod.addEventListener('change', (e) => {

            const selectedMethod = e.target.value;
            if (selectedMethod === 'Bank Transfer') {

                bankTransferDetails.style.display = 'block'
                qrCodeDetails.style.display = 'none'
                cashPaymentDetails.style.display = 'none'

            }

            else if (selectedMethod === 'Qr Code') {

                qrCodeDetails.style.display = 'block'
                cashPaymentDetails.style.display = 'none'

            }

            else if (selectedMethod === 'Cash') {

                cashPaymentDetails.style.display = 'block'
                qrCodeDetails.style.display = 'none'
                bankTransferDetails.style.display = 'none'

            }

        })

    </script>
</body>

</html>