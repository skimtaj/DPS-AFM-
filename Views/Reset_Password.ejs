<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Login Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #20232A;
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background: #ffffff;
            width: 100%;
            max-width: 450px;
            padding: 50px 30px;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            text-align: center;
            position: relative;
        }

        .profile-icon {
            font-size: 75px;
            color: #3498db;
            margin-bottom: 20px;
        }

        h2 {
            font-size: 26px;
            color: #2C3E50;
            margin-bottom: 25px;
        }

        .form-group {
            position: relative;
            margin-bottom: 25px;
        }

        .form-group input {
            width: 100%;
            padding: 15px 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background: #F7F7F7;
            font-size: 16px;
            outline: none;
            transition: all 0.3s ease;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .form-group input:focus {
            border-color: #3498db;
        }

        .form-group label {
            position: absolute;
            top: 15px;
            left: 20px;
            font-size: 16px;
            color: #888;
            pointer-events: none;
            transition: all 0.3s ease;
        }

        .form-group input:focus+label,
        .form-group input:not(:placeholder-shown)+label {
            top: -12px;
            left: 15px;
            background: #fff;
            padding: 0 8px;
            font-size: 12px;
            color: #3498db;
        }

        .form-group .fa {
            position: absolute;
            top: 50%;
            left: 20px;
            transform: translateY(-50%);
            color: #888;
        }

        .form-group .fa-eye {
            right: 20px;
            left: auto;
            cursor: pointer;
        }

        .btn-primary {
            width: 100%;
            padding: 12px;
            border-radius: 10px;
            border: none;
            background-color: #3498db;
            color: #fff;
            font-size: 18px;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #2980b9;
        }

        .footer-text {
            margin-top: 20px;
            color: #555;
        }

        .footer-text a {
            color: #3498db;
            text-decoration: none;
        }

        p.welcome-message {
            font-size: 14px;
            color: #7f8c8d;
            margin-bottom: 30px;
        }

        /* Media Queries for Responsive Design */
        @media (max-width: 576px) {
            .login-container {
                padding: 30px;
            }

            .btn-primary {
                padding: 10px;
                font-size: 16px;
            }

            h2 {
                font-size: 22px;
            }

            .profile-icon {
                font-size: 65px;
            }
        }
    </style>
</head>

<body>

    <div class="login-container">
        <i class="fas fa-user-circle profile-icon"></i> <!-- Profile Icon -->
        <h2>Reset Password</h2>
        <p class="welcome-message">Enter your email to reset your password.</p>

        <% if (messages.success) { %>
            <div class="alert alert-success" id="msg">
                <%= messages.success %>
            </div>
            <% } %>

                <% if (messages.error) { %>
                    <div class="alert alert-danger" id="msg">
                        <%= messages.error %>
                    </div>
                    <% } %>

                        <form method="post">
                            <div class="form-group">
                                <input type="email" id="email" name="Email" required
                                    placeholder=" "><!-- Empty placeholder for label effect -->
                                <label for="email">Email</label> <!-- Floating Label -->
                            </div>

                            <div class="form-group">
                                <input type="password" id="password" name="Password" required placeholder=" ">
                                <label for="password">New Password</label> <!-- Floating Label -->
                                <i class="fa fa-eye" id="togglePassword"></i>
                            </div>

                            <button type="submit" class="btn btn-primary">Update Password</button>

                            <div class="footer-text">
                                <p>Already have an account? <a href="/MMR-User-Login">Login</a></p>
                            </div>
                        </form>
    </div>

    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const passwordField = document.querySelector('#password');

        togglePassword.addEventListener('click', function () {
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);
            this.classList.toggle('fa-eye-slash');
        });

        setTimeout(() => {
            document.getElementById('msg').style.display = 'none'
        }, 3000);
    </script>

</body>

</html>