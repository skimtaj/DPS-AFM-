<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Task Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
        }

        .form-container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            padding: 30px;
            max-width: 600px;
            margin: 50px auto;
        }

        .form-title {
            color: #282C34;
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #009150;
            border: none;
        }

        .btn-primary:hover {
            background-color: #006c39;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="form-container">
            <h2 class="form-title">Add New Task</h2>
            <form method="post">
                <div class="mb-3">
                    <label for="department" class="form-label">Department</label>
                    <select class="form-select" id="department" required name="Department">
                        <option value="" selected disabled>Select Department</option>

                        <% departments.forEach((dept)=>{ %>

                            <option value="<%=dept.departmentName%>">
                                <%=dept.departmentName%>
                            </option>

                            <%}) %>

                    </select>
                </div>
                <div class="mb-3">
                    <label for="employee" class="form-label">Employee Name</label>
                    <select class="form-select" id="employee" required name="Employee">
                        <option value="" selected disabled>Select Employee</option>

                    </select>
                </div>
                <div class="mb-3">
                    <label for="taskName" class="form-label">Task Name</label>
                    <input type="text" class="form-control" id="taskName" placeholder="Enter task name" required
                        name="taskTitle">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" rows="4" placeholder="Enter task description"
                        required name="Description"></textarea>
                </div>
                <div class="mb-3">
                    <label for="deadline" class="form-label">Deadline</label>
                    <input type="date" class="form-control" id="deadline" required name="deadline">
                </div>
                <div class=" d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary" onclick="history.back()">Back</button>
                    <button type="submit" class="btn btn-primary">Add Task</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

<script>

    const employees = <%- JSON.stringify(employees) %> ;

</script>

<script>

    const department = document.getElementById('department');
    const employeeDropdown = document.getElementById('employee');

    department.addEventListener('change', (event) => {

        let selectedDepartment = event.target.value;
        employeeDropdown.innerHTML = '<option value="">Select Employee</option>'

        if (selectedDepartment) {

            employees.forEach((emp) => {

                if (selectedDepartment === emp.Department) {

                    let option = document.createElement('option');

                    option.value = emp.Name;
                    option.textContent = emp.Name;
                    employeeDropdown.appendChild(option);

                }

            });

        }

    })

</script>


</html>